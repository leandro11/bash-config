[user]
	name = Lorne
	email = dev@luotao.net
[alias]
	cl = clone
	ci = commit -m
	ca = commit --amend
	st = status
	pl = pull
	plr = !sh -c 'test -z \"`git status -uno -s`\" && git pull --rebase || (git stash && git pull --rebase && git pop)' -  # pull --rebase, stash if necessary
	mg = merge
	rb = rebase
	co = checkout
	cb = checkout -b
	br = branch --color
	ba = branch --color --all
	tr = !sh -c 'test ! -z $1 && git branch --set-upstream-to=origin/$1 $1 || echo "err: input remote branch name"' -
	rmb = push origin --delete  		# remove branch remotely
	fe = fetch --all
	up = remote update
	di = diff --color
	mb = merge-base
	rc = rm --cached
	pi = cherry-pick
	unstage = reset HEAD
	ps = push origin HEAD
	psf = push origin HEAD -f
	psto = !sh -c 'git push ${1:-origin} HEAD' -  	# push to remote other than origin
	rh = !sh -c 'test ! -z $1 && (test -z \"`git status -uno -s`\" && git reset --hard $1 || (git stash && git reset --hard $1 && git pop))' -  # reset --hard and stash if necessary
	pst = push origin --tags  			# push all tags to remote
	plt = fetch --tags  		# fetch all tags from remote
	tagc = rev-list -n 1  		# get tag commit
	tags = tag --format='%(refname:strip=2)  %(contents:lines=1) <%(*authordate:relative)>'  # list all tags and messages
	rmt = !sh -c 'test ! -z $1 && (git tag -d $1 && git push origin :refs/tags/$1) || echo "input tag name going to delete"' -  # delete tag from remote
	apply = stash apply
	save = stash save
	pop = stash pop
	list = stash list
	last = log -1
	logs = log --name-status --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	contrib = shortlog --no-merges -s -n  					# committer cotribution by name
	author = shortlog --no-merges -s -n --email 				# committer cotribution by email
	total = !sh -c 'git log --no-merges --pretty=format:"" | wc -l' -   	# total commit count
	alias = config --get-regexp alias

[push]
	default = matching
[core]
	excludesfile = ~/.gitignore
	editor = vim
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
  	ui = auto
[color "branch"]
  	current = green reverse
  	local = green
  	remote = red
[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold
[color "status"]
	added = green
	changed = blue
	untracked = magenta
	deleted = red

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
