[user]
	name = Lorne
	email = dev@luotao.net
[alias]
	cl = clone
	ci = commit -m
	ca = commit --amend
	st = status
	pl = pull
	mg = merge
	co = checkout
	br = branch --color
	ba = branch --color -a
	di = diff --color
	mb = merge-base
	pick = cherry-pick
	unstage = reset HEAD
	brdel = push origin --delete
	track = branch --track
	tr = branch --track
	fe = fetch --all
	up = remote update
	plr = !sh -c 'test -z \"`git status -uno -s`\" && git pull --rebase || (git stash && git pull --rebase && git pop)' -  # pull --rebase, stash if necessary
	ps = push origin HEAD
	psto = !sh -c 'git push ${1:-origin} HEAD' -  # push to remote other than origin
	goto = !sh -c 'test ! -z $1 && (test -z \"`git status -uno -s`\" && git reset --hard $1 || (git stash && git reset --hard $1 && git pop))' -  # reset --hard and stash if necessary
	pstag = push origin --tags  	# push all tags to remote
	tags = tag --format='%(refname:strip=2) %(contents:lines=1)'  			# list all tags and messages
	pltag = fetch --tags  		# fetch all tags from remote
	tagc = rev-list -n 1  		# get tag commit
	rmtag = !sh -c 'test ! -z $1 && (git tag -d $1 && git push origin :refs/tags/$1) || echo "input tag name going to delete"' -  # delete tag from remote
	apply = stash apply
	save = stash save
	pop = stash pop
	list = stash list
	last = log -1
	logs = log --name-status --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	contrib = shortlog --no-merges -s -n
	author = shortlog --no-merges -s -n -e
	total = !sh -c 'git log --no-merges --pretty=format:"" | wc -l' -

[push]
	default = matching
[core]
	excludesfile = ~/.gitignore
	editor = vim
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
  	ui = auto
[color "branch"]
  	current = green reverse
  	local = green
  	remote = red
[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold
[color "status"]
	added = green
	changed = blue
	untracked = magenta
	deleted = red

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
